<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <androidx.appcompat.widget.Toolbar
        android:title="@string/properties_details"
        android:id="@+id/pro_details_toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <!-- android:focusable="true"
android:focusableInTouchMode="true"-->


    <ScrollView
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <androidx.cardview.widget.CardView
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
               <TextView
                   android:drawableLeft="@drawable/ic_location_al_doha_gatar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:textSize="15dp"
                   android:gravity="center"
                   android:textStyle="bold"
                   android:text="49 St. Al-Doha Qatar"
                   android:textColor="@color/hint_text_color"
                   />


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                   android:textSize="15dp"
                   android:textStyle="bold"
                   android:text="@string/pro_details_price"
                   android:textColor="@color/hint_text_color"
                   />
               <TextView
                   android:gravity="center"
                   android:drawableLeft="@drawable/ic_s_dollar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:textSize="13dp"

                   android:textStyle="bold"
                   android:text="$28,000"
                   android:textColor="@color/colorPrimary"
                   />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:text="@string/pro_details_type"
                            android:textColor="@color/hint_text_color"
                            />
                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="30dp"
                            android:textSize="13dp"
                            android:textStyle="bold"
                            android:text="@string/pro_details_for_sale"
                            android:textColor="@color/colorPrimary"
                            />
                    </TableRow>
                </TableLayout>
                    //////

                    ///////
                    <ImageView
                        android:background="@drawable/properties3"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        />

                    <TableLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TableRow
                            android:gravity="center">
                            <TextView
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_bedrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="@string/beds_6"
                                android:textColor="@color/hint_text_color"
                                android:drawablePadding="5dp"
                                />
                            <TextView
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_bathrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="@string/baths_5"
                                android:textColor="@color/hint_text_color"
                                />
                            <TextView
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="@string/_750_sq_ft"
                                android:drawablePadding="5dp"
                                android:textColor="@color/hint_text_color"
                                />
                        </TableRow>

                        <TableRow
                            android:gravity="center">
                            <TextView
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_garages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="2"
                                android:textColor="@color/hint_text_color"
                                android:drawablePadding="5dp"
                                />
                            <TextView
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_kitchen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="@string/kitchen_2"
                                android:textColor="@color/hint_text_color"
                                android:drawablePadding="5dp"
                                />
                            <TextView
                                android:gravity="center"
                                android:drawableLeft="@drawable/ic_balcony"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:text="@string/balcony_2"
                                android:textColor="@color/hint_text_color"
                                android:drawablePadding="5dp"
                                />
                        </TableRow>

                    </TableLayout>




                </LinearLayout>
            </androidx.cardview.widget.CardView>
            ////////////


            ////////////
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pro_details_general_information"
                android:textColor="@color/hint_text_color"
                />

            <TextView
                android:id="@+id/texView"
                android:text="@string/pro_det_general_info_text"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pro_details_amenities"
                android:textColor="@color/hint_text_color"
                />
            <TableLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TableRow
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/pro_det_air_condition"
                        android:textColor="@color/hint_text_color"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/pro_det_balcony"
                        android:textColor="@color/hint_text_color"
                        />
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/pro_det_internet"
                        android:drawablePadding="5dp"
                        android:textColor="@color/hint_text_color"
                        />
                </TableRow>

                <TableRow
                    android:gravity="center">
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/internet"
                        android:textColor="@color/hint_text_color"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/bedding"
                        android:textColor="@color/hint_text_color"
                        android:drawablePadding="5dp"
                        />
                    <TextView
                        android:gravity="center"
                        android:drawableLeft="@drawable/ic_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:text="@string/cable_tv"
                        android:textColor="@color/hint_text_color"
                        android:drawablePadding="5dp"
                        />
                </TableRow>

            </TableLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/pro_details_location"
                android:textColor="@color/hint_text_color"
                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <LinearLayout
                    android:layout_margin="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/qatar_maps"
                    >

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>